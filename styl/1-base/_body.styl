*
  box-sizing: border-box;
body
  overflow-x: hidden;
h1,h2,h3,h4,h5,h6
  font-family: "Roboto Slab"
section
  background-color: $white
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  color: $black
  min-height: 100vh;
  overflow: hidden;
  position: relative;
  .wrapper
    width: 90%;
    max-width: 800px;
    margin: 0 auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    font-family: "Roboto";

.loading
  display: none
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.7);
  color: white;
  text-align: center;
  padding: 50vh 0;
  font-size: 3em;
  font-family: "Roboto Slab";

