section#hero
  background-image: url(../img/bg3.jpg)
  .wrapper 
    background-color: rgba($black, 0.5)
    padding: 3em 0
    border-radius: 1em
    color: $white
    h1
      font-size: 4em
      text-decoration: underline
      margin: 0
    p
      font-weight: 300
      letter-spacing: 2px
      font-size: 1.2em
    form#search
      width: 100%
      margin: 2.5em 0
      input
        padding: 0.5em
        color: #333
        letter-spacing: 2px
        font-size: 1.5em
        box-sizing: border-box
        border: none
      input[type="text"]
        width: 60%
      input[type="submit"]
        width: 20%
        background-color: $blue
        color: $white

